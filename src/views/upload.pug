extends base
  
block content 
  div 
    video#preview
      source(src="", type="video/webm")
      source(src="", type="video/mp4")
      source(src="", type="video/quicktime")
      source(src="", type="video/ogg")
    button#actionBtn Start Recording

  form(enctype="multipart/form-data", method="POST")
    label(for="video") Video File
    input(name="video", id="video", type="file", accept="video/*", required)

    label(for="thumb") Thumbnail File
    input(name="thumb", id="thumb", type="file", accept="image/*", required)
    
    input(name="title", placeholder="Title", type="text", max=80, required)
    input(name="description", placeholder="Description", min=20, type="text", required)
    input(name="hashtags", placeholder="Hashtags, separated by comma", type="text", required)
    input(value="Upload Video", type="submit")

  if errorMsg 
    span=errorMsg

block scripts
  script(src="/assets/js/recorder.js")