extends base
  
block content 
  div.edit_container
    div.edit
      div.pageTitle 👷 Edit Video
      form(method="POST")
        div.title
          label(for="title") 타이틀 : 
          input(id="title", name="title", placeholder="Title", max=80, value=video.title, required)
        div.desc
          label(for="description") 설명 :
          input(id="description", name="description", placeholder="Description", min=20, value=video.description, required)
        div.hashtags
          label(for="hashtags") 태그 :
          input(id="hashtags", name="hashtags", placeholder="Hashtags", value=video.hashtags.join(), required)
        input.submit(value="Save", type="submit")